<?xml version="1.0" encoding="UTF-8"?>

<!-- defines gloabl settings in the platform -->
<settings name="default">		
		
	<!-- Sizes -->
	<set world-width="640" />
	<set world-height="480" />		
	<set city-radius="8" />		
	<set route-width="8" />
		
	<!-- Colors -->
	<set color-background="#212f3c" />
	<set color-foreground="#000000" />
	<set color-city="#85c1e9" />
	<set color-city-name="#d6dbdf" />
	<set color-city-circumference="#2471a3" />
	<set color-task-text="#ffffff" />
	<set color-task-pickup="#85144b" />
	<set color-task-deliver="#0074D9" />
	<set color-task-indicator="#ffffff" />
	<set color-route="#34495e" />

	<!-- Timeouts -->
	<set timeout-setup="300000" />
	<set timeout-bid="300000" />
	<set timeout-plan="300000" />
	
	<!-- Flags -->
	<set flag-show-ui="true" />

</settings>
